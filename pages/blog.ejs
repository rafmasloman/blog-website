<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>

    <link rel="stylesheet" href="/css/style.css" type="text/css" />
  </head>
  <body>
    <div class="header container bg-stone-800 flex pt-4 pb-2 mx-auto">
      <div class="brand w-56 text-white pl-32">
        <span class="brand-name items-center flex">Blog.</span>
      </div>

      <nav class="navbar text-white flex flex-1">
        <ul class="nav-list flex flex-1 justify-center">
          <li class="home"><a href="/" class="mr-20">Home</a></li>
          <li class="blog"><a href="/blog" class="mr-20">Blog</a></li>
          <li class="products"><a href="/product">Product</a></li>
        </ul>
        <div class="login-btn pr-32">
          <button
            class="px-6 py-2 flex text-white bg-blue-600 rounded-lg hover:bg-blue-900 al"
          >
            Login
          </button>
        </div>
      </nav>
    </div>

    <section id="hero" class="container mx-auto pt-20 px-20">
      <a
        href="/article"
        type="button"
        class="text-white bg-blue-700 hover:bg-blue-800 focus:outline-none focus:ring-4 focus:ring-blue-300 font-medium rounded-full text-sm px-5 py-2.5 text-center mr-2 mb-2 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800"
      >
        Add article
      </a>

      <% if (article.length < 1) { %>
      <div
        class="p-4 mb-4 mt-12 text-sm text-blue-700 bg-blue-100 rounded-lg dark:bg-blue-200 dark:text-blue-800"
        role="alert"
      >
        <span class="font-medium"> Contents will avaiable soon </span>
      </div>
      <% } %>
    </section>

    <section id="blogs" class="container mx-auto px-20 py-14">
      <% for(let i = 0; i < article.length; i++) { %>
      <div
        id="blog card-blog"
        class="max-w-lg bg-white rounded-lg border-gray-200 shadow-md dark:border-gray-700"
      >
        <a href="/<%= article[i].id %>">
          <img class="rounded-t-lg" src="<%= article[i].image %>" alt="" />
        </a>
        <div class="p-5">
          <a href="#">
            <h5 class="mb-2 text-2xl font-bold tracking-tight text-black">
              <%= article[i].title %>
            </h5>
          </a>
          <p
            id="text-content"
            class="mb-3 font-normal text-gray-700 dark:text-gray-400"
          >
            <%= firstTextContents %><span id="dots" class="">....</span
            ><span id="more" class="hidden"><%= lastTextContents %> </span>
          </p>
          <div class="control">
            <a
              href="#"
              id="btn-read-more"
              class="inline-flex items-center py-2 px-3 text-sm font-medium text-center text-white bg-blue-700 rounded-lg hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800"
            >
              Read more
              <svg
                class="ml-2 -mr-1 w-4 h-4"
                fill="currentColor"
                viewBox="0 0 20 20"
                xmlns="http://www.w3.org/2000/svg"
              >
                <path
                  fill-rule="evenodd"
                  d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z"
                  clip-rule="evenodd"
                ></path>
              </svg>
            </a>

            <a
              href="/delete/<%= article[i].id %>"
              id="btn-delete"
              class="focus:outline-none text-white bg-red-700 hover:bg-red-800 focus:ring-4 focus:ring-red-300 font-medium rounded-lg text-sm px-5 py-2.5 ml-3 mb-2 dark:bg-red-600 dark:hover:bg-red-700 dark:focus:ring-red-900"
            >
              Delete
            </a>

            <a
              href="/update-article?id=<%= article[i].id %>"
              id="btn-update"
              class="focus:outline-none ml-5 text-white bg-green-700 hover:bg-green-800 focus:ring-4 focus:ring-green-300 font-medium rounded-lg text-sm px-5 py-2.5 mr-2 mb-2 dark:bg-green-600 dark:hover:bg-green-700 dark:focus:ring-green-800"
            >
              Update
            </a>
          </div>
        </div>
      </div>
      <% } %>
    </section>
    <script>
      try {
        const btnRead = document.getElementById('btn-read-more');
        const more = document.getElementById('more');
        const dots = document.getElementById('dots');

        btnRead.addEventListener('click', (e) => {
          dots.classList.toggle('hidden');
          more.classList.toggle('hidden');
        });

        const toast = document.getElementById('toast-success');

        toast.addEventListener('click', (e) => {
          e.target.classList.add('hidden');
        });
      } catch (error) {
        console.log(error);
      }
    </script>
  </body>
</html>
